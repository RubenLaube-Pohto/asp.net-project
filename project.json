{
  "name": "SimpleChatProject",
  "version": "0.0.0-*",
  "description": "This is a simple chat application made as an end of course project.",
  "copyright": "Ruben Laube-Pohto 2016",
  "buildOptions": {
    "copyToOutput": {
      "include": "appsettings.json" // add file to be available after build
    },
    "debugType": "portable",
    "emitEntryPoint": true,
    "preserveCompilationContext": true // enable razor views to compile at runtime
  },
  "dependencies": {},
  "tools": {
    "Microsoft.DotNet.Watcher.Tools": "1.0.0-preview2-final"
  },
  "frameworks": {
    "netcoreapp1.0": {
      "dependencies": {
        "Microsoft.NETCore.App": {
          "type": "platform",
          "version": "1.0.1"
        },
        "Microsoft.AspNetCore.Server.Kestrel": "1.1.0",
        "Microsoft.AspNetCore.SignalR": "0.0.1-alpha",
        "Microsoft.AspNetCore.Mvc": "1.1.0",
        "Microsoft.AspNetCore.Mvc.TagHelpers": "1.1.0", // For making razor forms
        "Microsoft.Extensions.Configuration": "1.1.0",
        "Microsoft.Extensions.Configuration.Json": "1.1.0",
        // Official MySql connection package didn't work for me, used Pomelo instead.
        "Pomelo.EntityFrameworkCore.MySql": "1.1.0"
      },
      "imports": "dnxcore50"
    }
  }
}
